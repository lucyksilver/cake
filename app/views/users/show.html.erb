<div class="container">
  <div class="profile">
    <div class="about-me-avatar">
      <% if @user.avatar.attached? %>
        <%= cl_image_tag @user.avatar.key, crop: :fill, class: "about-me-avatar" %>
      <% end %>
    </div>
    <div class="about-me-info">
      <h1><%= @user.name %></h1>
      <p><%= @user.about_me %></p>
      <p><%= link_to 'Edit your about me!', edit_user_path, class: "edit-link" %></p>
    </div>
  </div>


  <h3>Your orders!</h3>
  <div class="card-home">
    <% @user.orders.each do |order| %>
    <ul class="list-inline" >
    <% if order.item.photo.attached? %>
      <%= cl_image_tag order.item.photo.key, height: 300, crop: :fill %>
    <% end %>
    <li>Your ordered cake: <%= link_to order.item.name, item_order_path(order.item, order), class: "card-home-link" %> </li>
    <li>Your message to the baker: <%= order.description %> </li>
    <% end %>
    </ul>
  </div>

  <h3>Your cakes!</h3>
  <div class="card-home">
    <% @user.items.each do |item| %>
    <ul class="list-inline">
    <% if item.photo.attached? %>
      <%= cl_image_tag item.photo.key, height: 300, crop: :fill %>
    <% end %>
    <li><%= link_to item.name, item_path(item), class: "card-home-link" %> </li>
    <li>Portion size:<%= item.portions %> </li>
    <li>Cake description: <%= item.description %></li>
    <% end %>
    </ul>
  </div>
</div>
