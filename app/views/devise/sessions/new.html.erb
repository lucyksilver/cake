<div class="container-login d-flex justify-content-center">
  <div class="login-box mt-5" style="width: 400px">
<h1 class="mb-4">Log in</h1>


<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs mt-3">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "submit-btn mt-3 mb-3"%>
  </div>
<% end %>

<%= render "devise/shared/links", class: "login-links" %>
</div>
</div>


