<div class="container text-center">
  <div class="row justify-content-center">
    <div class="col-6">
      <h1 class="text-center mb-5">Your new order</h1>
      <div class="order-form">
        <%= simple_form_for [@item, @order] do |f| %>
          <%= f.input :description, label: false, placeholder: 'Your message to the baker', class: "order-bar" %>
          <%= f.submit :Order, class: "submit-btn" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
